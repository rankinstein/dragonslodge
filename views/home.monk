{% if view === 'home' %}
<div>
  Hello {{ name }}!
  <form id="auth">
    <input type="text" name="username" />
    <input type="password" name="password" />
    <input type="submit" value="Submit" />
  </form>
</div>
{% endif %}
{% if view == 'auth' %}
<div>
  Authentication {{ name }}!
  <p>{{ token }}</p>
</div>
{% endif %}